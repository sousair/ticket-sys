{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "removeComments": true,
    "target": "ES2019",
    "moduleResolution": "Node",
    "sourceMap": true,
    "outDir": "dist",
    "incremental": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@entities/*": ["./src/domain/entities/*"],
      "@domain/*": ["./src/domain/*"],
      "@application/*": ["./src/application/*"],
      "@utils/*": ["./src/utils/*"],
      "@infra/*": ["./src/infra/*"]
    }
  }
}
